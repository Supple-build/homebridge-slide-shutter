{
  "pluginAlias": "slide-shutter",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "useLocal": true,
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Slide Shutter"
      },
      "mode": {
        "title": "Mode",
        "type": "string",
        "default": "local",
        "oneOf": [
          { "title": "Remote", "enum": ["remote"] },
          { "title": "Local", "enum": ["local"] }
        ],
        "required": true
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "condition": {
          "functionBody": "return model.mode === 'remote';"
        }
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "condition": {
          "functionBody": "return model.mode === 'remote';"
        }
      },
      "devices": {
        "title": "Slides",
        "type": "array",
        "condition": {
          "functionBody": "return model.mode === 'local';"
        },
        "items": {
          "title": "Curtain",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "ip": {
              "title": "ip",
              "type": "string",
              "required": true
            },
            "code": {
              "title": "Code",
              "type": "string",
              "required": true
            },
            "pollInterval": {
              "title": "Poll Interval",
              "type": "integer",
              "required": false
            },
            "tolerance": {
              "title": "Tolerance",
              "type": "integer",
              "required": false
            }
          }
        }
      }
    }
  }
}
